@page
@model KD_Gadgets.Pages.ProductDetailsModel
@{
}
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">
                    <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                    <img src="/images/@Model.productInfo.ImageFileName"
                         class="card-img-top" alt="" />
                    <div class="card-body">
                        <div class="text-center">
                            <h4 class="card-title">@Model.productInfo.ProductName</h4>
                           
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <h5><span>Price</span></h5><span>@(Model.productInfo.Price)$</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h5><span>Category</span></h5><span>@Model.productInfo.Category</span>
                            </div>
                            
                        </div>
                        
                        <h4 class="text-center">Description</h4>
                        <p>
                            @Model.productInfo.Description
                        </p>
                        <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @Model.productInfo.Id)">
                            Add to Cart<i class="bi bi-cart2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@page
@model KD_Gadgets.Pages.Auth.LoginModel
@{
}

	
<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log in</p>


                                @if (Model.errorMessage.Length > 0)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <strong>@Model.errorMessage</strong>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                else if (Model.successMessage.Length > 0)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>@Model.successMessage</strong>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <form method="post" class="mx-1 mx-md-4">

                                    
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" class="form-control" placeholder="Email" asp-for="Email"/>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                     

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password"  class="form-control" placeholder="Password" asp-for="Password"/>
                                            <span asp-validation-for="Password" class="text-danger"></span>

                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-outline-secondary btn-md">Log in</button>
                                    </div>

                                </form>


                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
